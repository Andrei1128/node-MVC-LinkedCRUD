<% layout('boilerplate/layout.ejs') %>
    <div class="app-wrapper">
        <h1 class="app-title">Companies Management Software</h1>
        <div class="btn-wrapper">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                Add Company
            </button>
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Add Company</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/firme" method="POST" class="addFirma-form">
                                <input type="text" class="form-control" name="nume" placeholder="Name" minlength="6"
                                    required>
                                <button class="btn btn-primary">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% for(let firma of firme) { %>
            <div>
                <div class="firma-th">
                    <h2>
                        <%= firma.nume %>
                    </h2>
                    <div class="action-td">
                        <a class=" btn btn-outline-secondary" href="/firme/<%=firma.id%>">Edit</a>
                        <form action="/firme/<%=firma.id%>?_method=DELETE" method="POST">
                            <button class="btn btn-outline-secondary">Delete</button>
                        </form>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Salary</th>
                                <th>Date</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% for(let angajat of firma.angajati) { %>
                                <tr>
                                    <td>
                                        <%= angajat.prenume %>
                                    </td>
                                    <td>
                                        <%= angajat.nume %>
                                    </td>
                                    <td>
                                        <%= angajat.email %>
                                    </td>
                                    <td>
                                        <%= angajat.salariu %>$
                                    </td>
                                    <td>
                                        <%= angajat.data.toLocaleDateString("en-GB") %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <% } %>
    </div>