<% layout('boilerplate/layout.ejs') %>
    <a class="btn btn-primary btn-back" href="/firme/<%=firma._id%>">Back</a>
    <div class="form-wrapper">
        <h2 class="form-title">Add Employee</h2>
        <form action="/firme/<%=firma._id%>/add" method="POST">
            <input type="text" class="form-control" name="prenume" placeholder="First Name" minlength="3" required>
            <input type="text" class="form-control" name="nume" placeholder="Last Name" minlength="3" required>
            <input type="email" class="form-control" name="email" placeholder="Email" minlength="8" required>
            <input type="number" class="form-control" name="salariu" placeholder="Salary" min="0" required>
            <input type="date" class="form-control" name="data" placeholder="Date" required>
            <button class="btn btn-primary form-btn">Add</button>
        </form>
    </div>