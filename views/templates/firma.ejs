<% layout('boilerplate/layout.ejs') %>
    <a class="btn btn-primary btn-back" href="/firme">Back</a>
    <div class="form-wrapper">
        <h2 class="form-title">Edit Firma Data</h2>
        <form action="/firme/<%=firma.id%>" method="POST">
            <input type="text" class="form-control" name="prenume" placeholder="First Name">
            <input type="text" class="form-control" name="nume" placeholder="Last Name">
            <input type="email" class="form-control" name="email" placeholder="Email">
            <input type="number" class="form-control" name="salariu" placeholder="Salary">
            <input type="date" class="form-control" name="data" placeholder="Date">
            <button class="btn btn-primary form-btn">Add</button>
        </form>
    </div>